<aura:component >
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <aura:handler name="change" action="{!c.doInit}" value="{!v.startDate}"/>
    <aura:registerEvent name="MyScheduleClosedCaseToggle" type="c:MyScheduleClosedCaseToggle" />
    <aura:attribute name="startDate" type="Date"/>
    <aura:attribute name="daysToDisplay" type="Integer"/>
    <aura:attribute name="dates" type="Array"/>
    <aura:attribute name="weekdays" type="Array"/>
    <aura:attribute name="header" type="String"/>
    <aura:attribute name="showOptions" type="Boolean"/>
    <aura:attribute name="showCasesToggleButton" type="Boolean" default="true"/>
    <aura:attribute name="showClosedCases" type="Boolean" default="false"/>
    <aura:attribute name="showClosedCasesLabel" type="String" default="Show Closed Cases"/>
    
    <div class="slds-grid slds-p-left_medium">
        <div class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_2-of-12 slds-text-align_left slds-text-heading_medium">
            {!v.header}
        </div>
        <div class="slds-p-left_large slds-text-align_left slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_2-of-6 slds-large-size_4-of-12" aura:id="toggleClosedCases_div">
            <aura:renderIf isTrue="{!v.showCasesToggleButton}">
            	<lightning:button aura:id="toggleClosedCases" 
                    value="{v.showClosedCases}"
                    label="{!v.showClosedCasesLabel}"
                    onclick="{!c.toggleClosedCases}" 
                    variant="neutral" />
                <aura:set attribute="else"></aura:set>
            </aura:renderIf>
        </div>
    </div>
    
    <div class="slds-grid">
        <div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_2-of-12">
        </div>
        <div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
            <div class="slds-text-align_left slds-truncate slds-align_absolute-center"></div>
        </div>
        <div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
            <div class="slds-text-align_left slds-truncate slds-align_absolute-center"></div>
        </div>
		<div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
            <div class="slds-text-align_left slds-truncate slds-align_absolute-center"></div>
        </div>
        <aura:iteration var="w" items="{!v.weekdays}">
            <div class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
                <div class="slds-text-align_center slds-truncate slds-align_absolute-center">{!w}</div>
            </div>
        </aura:iteration>
    </div>

    <div class="slds-grid" style="font-weight: 700;">
        <div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_3-of-12">
            <div class="slds-text-align_left slds-truncate">Account</div>
        </div>
        <div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
            <div class="slds-text-align_left slds-truncate">Opportunity</div>
        </div>
        <div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
            <div class="slds-text-align_left slds-truncate">Requester</div>
        </div>
		<div style="max-width:10.0rem;min-width:10.0rem" class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
            <div class="slds-text-align_left slds-truncate">Days Due</div>
        </div>
        <aura:iteration var="d" items="{!v.dates}">
            <div class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-6 slds-large-size_1-of-12">
                <div class="slds-text-align_center slds-truncate slds-align_absolute-center">
                	<c:MyScheduleAdminHeaderDate date="{!d}"/>
                </div>
            </div>
        </aura:iteration>
    </div>
</aura:component>